<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - My ASP.NET MVC Application</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <script src='@Url.Content("http://code.jquery.com/jquery-1.8.3.min.js")' type='text/javascript'></script>
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
            <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
            <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" type="text/css" />
            <script src='@Url.Content("~/Scripts/jquery.validate.js")' type='text/javascript'></script>
            <script src='@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")' type='text/javascript'></script>
            <script>
                function linkTo() {
                    var title = localStorage.getItem('title')
                    var id = localStorage.getItem('token')
                    if (id) {
                        if (title === 'GIAMDOC') {
                            window.location.replace('/sep22t9/DonNghiPhep/Manager/' + id)
                        } else {
                            window.location.replace('/sep22t9/DonNghiPhep/Employee/' + id)
                        }
                    } else {
                        window.location.replace('/sep22t9/Account/Login')
                    }
                    return false;
                }
                $(document).ready(function ready() {
                    var token = localStorage.getItem('token');
                    var username = localStorage.getItem('username');
                    var title = localStorage.getItem('title');
                    if (title === 'GIAMDOC') {
                        $("#form_nhanvien").show()
                    } else {
                        $("#form_nhanvien").hide()
                    }
                })
            </script>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title" onclick="window.location.replace('/sep22t9')"></p>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li><a style="cursor: pointer;" onclick="linkTo()">Đơn Nghỉ Phép</a></li>
                            <li id="form_nhanvien">@Html.ActionLink("Nhân Viên", "Index", "NguoiDung")</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - My ASP.NET MVC Application</p>
                </div>
            </div>
        </footer>
        @Scripts.Render("~/MVCGridHandler.axd/script.js")
        @RenderSection("scripts", required: false)
    </body>
</html>
